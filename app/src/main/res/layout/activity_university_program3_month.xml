<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar"
            app:title="Programs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Program Details for University Students  (Under Graduates, Post Graduates)"
                android:textSize="30dp"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#C52318"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorAccent"
                android:text= "Habit Forming for success: 3 Months Of Engagement "
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/college3month"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A 3 months program designed for successful habits formation for optimization of your performance in immediate future by scientific and continuous self-evaluation"
                android:textSize="20sp"
                android:layout_margin="20sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-black" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_obj1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:id="@+id/obj1"
                    android:text="@string/college_3_month_1"
                    android:layout_marginStart="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog1"
