<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/material_toolbar"
            app:title="Programs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Program Details for University Students  (Under Graduates, Post Graduates)"
                android:textSize="30dp"
                android:layout_margin="10sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#C52318"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorAccent"
                android:text="Compass Course For Direction-Setting:   1 Month Of Engagement"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/college1month"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A program  designed to assess your abilities and create a clear for your performance enhancement plan that you follow yourself later"
                android:textSize="19sp"
                android:layout_margin="20sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-black" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_obj1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:id="@+id/obj1"
                    android:layout_marginStart="10dp"
                    android:text="@string/college_1_month_1"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/prog2"
                    android:text="@string/college_1_month_2"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="10sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/prog3"
                    android:text="@string/college_1_month_3"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="10sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/prog4"
                    android:text="@string/college_1_month_4"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="10sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/prog5"
                    android:text="@string/college_1_month_5"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="10sp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_prog6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="#F1F9FA"
                android:layout_marginStart="10dp"
                card_view:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/prog6"
                    android:text="@string/college_1_month_6"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:layout_margin="10sp"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pay_university_1month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:padding="12dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                style="bold"
                android:text="Pay for 1 month"
                android:background="@drawable/oval"

                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>