                android:src="@drawable/school12month"
                android:layout_marginLeft="@+id/student_program_12months"
                android:layout_marginTop="20dp"
                />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>
